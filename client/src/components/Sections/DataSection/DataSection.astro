---
import { Image } from 'astro:assets';

import BulletPointRender from '@components/BulletPoints/BulletPointRender/BulletPointRender.astro';
import NumberRender from '@components/Numbers/NumberRender/NumberRender.astro';

import mainBulletPointsData from '@data/_static/bulletPoints/mainBulletPoints.data';
import mainNumbersData from '@data/_static/numbers/mainNumbers.data';
---

<section class="pb-100 pt-70">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="campus-content pr-lg-20">
          <div class="campus-title">
            <h2 class="text-center text-lg-start">
              Explora La Vida Estudiantil
            </h2>
            <p class="text-center text-lg-start">
              En la PUCMM, la vida estudiantil es una parte integral de la
              experiencia universitaria. Aquí encontrarás información sobre los
              grupos estudiantiles, servicios, beneficios, eventos, noticias y
              mucho más.
            </p>
          </div>
          <BulletPointRender bulletPoints={mainBulletPointsData} />
          <NumberRender numbersData={mainNumbersData} />
          <!-- <div class="d-flex justify-content-center justify-content-lg-start">
            <a href="#" class="default-btn-one"
              >LLamado de acción<i class="fa-solid fa-arrow-right"></i></a
            >
          </div> -->
        </div>
      </div>
      <div class="col-lg-6">
        <p>MEJOR ES SUBIRLO A YOUTUBE</p>
        <video width="100%" height="360px" controls>
          <source src="/videos/estudiantes.mp4" type="video/mp4" />
          Your browser does not support the video tag.
        </video>
      </div>
    </div>
  </div>
</section>
