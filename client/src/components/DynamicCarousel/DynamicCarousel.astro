---
import CarouselButtonRender from './components/carouselButton/carouselButtonRender/CarouselButtonRender.astro';
import CarouselImageRender from './components/carouselImage/carouselImageRender/CarouselImageRender.astro';

interface Props {
	carouselImages: string[];
}

const { carouselImages } = Astro.props;
---

<div class="d-flex justify-content-center">
  <div
    id="carouselExampleIndicators"
    class="carousel slide w-100"
    data-bs-ride="carousel"
  >
    <div class="carousel-indicators">
      <CarouselButtonRender carouselImages={carouselImages} />
    </div>
    <div class="carousel-inner">
      <CarouselImageRender carouselImages={carouselImages} />
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
