---
import { Image } from 'astro:assets';

interface Props {
	membersImages: string[];
}

const { membersImages } = Astro.props;
---

<div class="container">
  <div class="row">
    {
      membersImages.map((src, index) => (
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <div class="d-flex justify-content-center align-items-center">
            <Image
              src={src}
              alt={`Personal ${index + 1}`}
              width={200}
              height={250}
              class="rounded"
              style="width: 200px; height: 250px; object-fit: cover; object-position: center;"
            />
          </div>
        </div>
      ))
    }
  </div>
</div>
