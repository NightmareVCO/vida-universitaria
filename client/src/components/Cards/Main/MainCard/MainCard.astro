---
import type { MainCardData } from '@data/_static/cards/mainCard.data';

interface Props {
	card: MainCardData;
}

const { card } = Astro.props;
---

<div class="col-lg-4 col-md-6">
  <div class="single-aca-card">
    <div class="title d-flex align-items-center">
      <i class={card.icon}></i>
      <h3>{card.title}</h3>
    </div>
    <p>{card.description}</p>
    <div class="readmore">
      <a href={card.link}>
        {card.label}
        <i class="bx bx-right-arrow-alt"></i>
      </a>
    </div>
  </div>
</div>
